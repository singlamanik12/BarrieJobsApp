@model BarrieJobsApp.Models.Applicants

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>Applicants</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ApplicantId" class="control-label"></label>
                <input asp-for="ApplicantId" class="form-control" />
                <span asp-validation-for="ApplicantId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ApplicantResume" class="control-label"></label>
                <input asp-for="ApplicantResume" class="form-control" />
                <span asp-validation-for="ApplicantResume" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ApplicantLocation" class="control-label"></label>
                <input asp-for="ApplicantLocation" class="form-control" />
                <span asp-validation-for="ApplicantLocation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="JobApplied" class="control-label"></label>
                <select asp-for="JobApplied" class ="form-control" asp-items="ViewBag.JobApplied"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
